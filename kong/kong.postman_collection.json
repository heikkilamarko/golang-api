					"raw": "{\n    \"id\": \"{{key_auth_plugin_id}}\",\n    \"name\": \"key-auth\",\n    \"service\": {\n        \"id\": \"{{service_id}}\"\n    },\n    \"config\": {\n        \"key_in_query\": false,\n        \"key_names\": [\n            \"x-api-key\"\n        ],\n        \"key_in_header\": true,\n        \"run_on_preflight\": true,\n        \"hide_credentials\": false,\n        \"key_in_body\": false\n    },\n    \"protocols\": [\n        \"http\"\n    ]\n}",
